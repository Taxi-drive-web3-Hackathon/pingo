generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String @unique
  email String @unique

  @@map("user")
  Payment Payment[]
}

model Payment {
  id              Int     @id @default(autoincrement())
  addressReceiver String
  chainId         String?
  amount          Int

  user   User? @relation(fields: [userId], references: [id])
  userId Int?

  @@map("payment")
}
